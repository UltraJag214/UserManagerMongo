html
    head
    body
        form(id="editForm", method='POST', action=`/edit/${myObj.id}`)
            div
                label(for='firstName') First Name
                input(id='firstName', name='firstName', value=myObj.firstName)
            div
                label(for='lastName') Last Name
                input(id='lastName', name='lastName', value=myObj.lastName)
            div
                label(for='email') Email
                input(id='email', name='email', value=myObj.email)
            div
                label(for='age') Age
                input(id='age', name='age', type='number', value=myObj.age)
            div
                input(type='submit', value='Edit User')
            div
                a(href="/user") See all the Users